%html
  %head
    - title_rent = 'строительной техники'
    - title_rent_back = 'строительную технику'
    - title_rent = @auction_category.home_description if @auction_category.present?
    - title_rent_back = @auction_category.description if @auction_category.present?

    %meta{:charset => "UTF-8"}/
    %meta{:content => "artel.by - площадка по аренде и сдаче #{title_rent}. Сдать технику в аренду легко.", :name => "description"}/
    %meta{:content => "аренда сдать строительная техника #{title_rent_back}", :name => "keywords"}/
    %meta{:content => "artel.by", :name => "author"}/

    %title
      = "Аренда #{title_rent} в Минске - сдать #{title_rent_back} в аренду по выгодной цене"

    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-103172200-1', 'auto');
      ga('send', 'pageview');
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    = render 'shared/menu'
    .container.white-bg-wrapper
      - if notice.present?
        %p.alert.alert-success
          = notice
      - if alert.present?
        %p.alert.alert-danger
          = alert

      = yield
      - if current_page?(root_path)
        = render 'shared/footer_static'
      - else
        %br
        %br
        = render 'shared/footer'
    = render 'shared/contacts'
    = render 'shared/context'
