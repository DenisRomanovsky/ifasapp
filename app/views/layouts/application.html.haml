%html
  %head
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags

    %title
      Vanya`s app

  %body.main-bg-2
    = render 'shared/menu'
    .container{style: 'padding-top: 50px;'}
      %div{style: 'padding-top: 10px;'}
      - if notice.present?
        %p.alert.alert-success
          = notice
      - if alert.present?
        %p.alert.alert-danger
          = alert

      = yield
