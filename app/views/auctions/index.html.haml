.row
  .col-sm-12
    %table.table.table-striped
      %thead
        %th
          Описание
        %th
          Подкатегория
        %th
          Категория
        %th
          Время окнчания
        %th
        %th
      %tbody
        -@auctions.each do |auction|
          %tr
            %td
              = auction.description.truncate(20, omission: '...')
            %td
              = auction.mechanism_subcategories.pluck(:description).join(', ') if auction.mechanism_subcategories.any?
            %td
              = auction.mechanism_category.description
            %td
              = auction.end_time.strftime("%d/%m/%Y %R")
            %td
              %a.btn.btn-default.btn-custom{href: auction_path(auction.id),role: "button"}
                Детали
    %a.btn.btn-default.btn-custom{href: new_auction_path,role: "button"}
      Создать новый