= bootstrap_form_for(@auction) do |f|
  /= f.datetime_select :start_time, label: 'Время начала'
  = f.datetime_select :end_time, label: 'Время окончания аукциона (день, месяц, год и время)', default: 1.days.from_now, discard_minute: true, prompt: {hour: 'Час' }, start_year: Date.today.year, disabled: @edit_action, datetime_separator: ''
  = f.text_area :description, label: 'Описание'
  = f.collection_select :mechanism_category_id, MechanismCategory.all, :id, :description, {selected: @auction_category_id, label: 'Категория', help: 'Обязательное поле.', id: 'auction_category_id'}, disabled: @edit_action
  = f.collection_select :mechanism_subcategory_id, MechanismSubcategory.where(mechanism_category_id: @auction_category_id), :id, :description, {selected: @auction_sub_category_id, label: 'Подкатегория', help: 'Оставьте поле пустым, чтобы аукцион увидели владельцы любой техники выбранной категории.', id: 'auction_subcategory_id', include_blank: true}
  = f.submit "Сохранить"

= javascript_include_tag('categories_selector')