%nav.navbar.navbar-default.custom-menu
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{type: 'button', 'data-toggle' => 'collapse', 'data-target'=>'#collapse-menu-ifasapp', 'aria-expanded'=>'false'}
        %span.sr-only
          Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: root_path, style: 'padding-top: 0px'}
    .collapse.navbar-collapse{id: 'collapse-menu-ifasapp'}
      %ul.nav.navbar-nav
        = render partial: 'home/menu_item'
        - if current_user.present?
          - if current_user.has_info?
            = render partial: 'auctions/my_auctions_menu_item'
            = render partial: 'mechanisms/my_mechanisms_menu_item'
          - else
            = render partial: 'shared/no_info_menu_item'
      %ul.nav.navbar-nav.navbar-right
        = render partial: 'articles/menu_item'
        = render partial: 'user_infos/menu_item'
