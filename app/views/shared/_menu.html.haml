%nav.navbar.navbar-default.navbar-fixed-top.topnav
  .container.topnav
    .navbar-header
      %button.navbar-toggle.collapsed{type: 'button', 'data-toggle' => 'collapse', 'data-target'=>'#bs-example-navbar-collapse-1', 'aria-expanded'=>'false'}
        %span.sr-only
          Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: root_path, style: 'padding-top: 0px'}
        = image_tag('label.png', height: '50')

    .collapse.navbar-collapse{id: "bs-example-navbar-collapse-1"}
      - if current_user.present?
        %ul.nav.navbar-nav
          = render partial: 'auctions/my_auctions_menu_item'
          = render partial: 'mechanisms/my_mechanisms_menu_item'
      %ul.nav.navbar-nav.navbar-right
        = render partial: 'user_infos/menu_item'
        = render partial: 'shared/session_menu_item'
        = render partial: 'shared/log_out_menu_item'