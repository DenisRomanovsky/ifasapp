<div class="row">
  <div class="col-sm-4 col-md-4 col-lg-4"></div>
  <div class="col-sm-4 col-md-4 col-lg-4">
    <h2><%= t('.forgot_your_password') %></h2>

    <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.email_field :email, autofocus: true %>
        </div>

        <div class="actions">
          <%= f.submit t('.send_me_reset_password_instructions'), {class: 'btn btn-default btn-custom '} %>
        </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
  <div class="col-sm-4 col-md-4 col-lg-4"></div>
</div>